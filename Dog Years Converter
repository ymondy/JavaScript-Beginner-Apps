//My age as a constant variable.
const myAge = 36;
//earlyYears is set as a variable with a changing value.
let earlyYears = 2;
earlyYears *= 10.5;
//myAge has already accounted 2 years subtract from and set to laterYears.
let laterYears = myAge - 2;
laterYears *= 4;
//to define the value of my age in dog years.
var myAgeInDogYears = earlyYears + laterYears;
//Write name in lowercase letters.
const myName = 'Von'
myName.toLowerCase(myName);
//Write string interpolation to display my name and age in dog years.
console.log(`My name is ${myName}. I am ${myAge} years old in human years which is ${myAgeInDogYears} years old in dog years.`);
